<header>
    <div class="bloque-sesion">
        <ul type="none">
            <li>
                <a href="/users/login"><i class="far fa-user"></i> Iniciar sesi√≥n</a>
            </li>
            <li>
                <a href="/users/register"><i class="fas fa-user-plus"></i> Registrarse</a>
            </li>
            <li>
                <a href="/admin"><i class="fas fa-cog"></i> Administrador</a>
            </li>
        </ul>
    </div>
    <nav class="bloque-nav">
        <a class="img-logo" href="/"><img src="/images/logo-dark-l.png" alt="" /></a>
        <div class="buscador">
            <form action="/products/search" method="GET">
                <div class="btn-buscar">
                    <input class="form-control" type="text" name="keyword" placeholder="Buscar" >
                </div>
                <button type="submit"><i class="fas fa-search"></i></button>
            </form>
        </div>
        <ul class="nav-bar-header">
            <li>
                <a href="/products/product-list" class="btn-categorias"><i class="fas fa-list-ul"></i></a>
            </li>
            <li>
                <a class="busc" href=""><i class="fas fa-search"></i></a>
            </li>
            <li>
                <a class="cesta" href="/store"><i class="fas fa-shopping-bag"></i></a>
            </li>
        </ul>

        <ul class="nav-bar-tablet">
            <li>
                <a class="busc" href=""><i class="fas fa-search"></i></a>
            </li>
            <li>
                <a class="user-log"><i class="fas fa-user-circle"></i></a>
                <ul class="submenu-user">
                    <% if (locals.userLogin) { %>
                        <li><i class="fas fa-user"></i><a><%= locals.userLogin.name %> </a></li>
                        <% if (locals.userLogin.rol === 2) { %>
                            <li>
                                <a href="/admin">Administrador <i class="fas fa-cog"></i></a>
                            </li>                      
                        <% } %>
                    <% }else { %>

                        <li><i class="fas fa-user"></i><a href="/users/login">Iniciar sesion</a></li>
                        <li><i class="fas fa-user-plus"></i><a href="/users/register">Crear cuenta</a></li>


                    <% } %>
                </ul>
            </li>
            <li>
                <a class="cesta" href="/store"><i class="fas fa-shopping-bag"></i></a>
            </li>
            
        </ul>

        <ul class="nav-bar-escritorio">
            <li>
                <a class="user" href="">Mi cuenta</a><i class="fas fa-user-circle"></i>
               
                <ul class="submenu-user">
                    <% if (locals.userLogin) { %>
                        <li><i class="fas fa-user"></i><a href="/users/profile"><%= locals.userLogin.name %> </a></li>
                        <% if (locals.userLogin.rol === 2) { %>
                            <li>
                                <a href="/admin">Administrador <i class="fas fa-cog"></i></a>
                            </li>                      
                        <% } %>
                        <li><a href="/users/logout">Cerrar sesion</a></li>
                    <% }else { %>

                        <li><i class="fas fa-user"></i><a href="/users/login">Iniciar sesion</a></li>
                        <li><i class="fas fa-user-plus"></i><a href="/users/register">Crear cuenta</a></li>


                    <% } %>
                </ul>
            </li>
        </ul>
    </nav>
    <nav class="nav-social">
        <ul class="prod-of">
           <a href="/"><li>Inicio</li></a>
            <li><a href="/products/product-list">Todos los productos</a></li>
            <li> <a href="/products/ofertas">Ofertas</a></li>
           
        </ul>
        <ul class="redes">
            <li>
                <a class="whatsapp" href=""><i class="fab fa-whatsapp"></i></a>
            </li>
            <li>
                <a class="ig" href=""><i class="fab fa-instagram"></i></a>
            </li>
            <li>
                <a class="facebook" href=""><i class="fab fa-facebook"></i></a>
            </li>
            <% if (locals.userLogin) { %>
            <li class="cesta">
                <button type="button" class="btn-cart btn btn-outline-light" data-bs-toggle="modal" data-bs-target="#modal-carrito">
                    <i class="fas fa-shopping-cart"></i>
                    <span class="badge rounded-pill bg-warning"></span>
                  </button>
            </li>
            <% } %>
        </ul>
    </nav>

    
</header>

<aside>
    <!-- Modal -->
    <div class="modal fade" id="modal-carrito" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content" id="miCarrito">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Mi Carrito</h5>
          </div>
          <div class="modal-body" id="lista-carrito">
            <div class="table-responsive">
              <table class="table">
                <thead id="cart-head">
                  <tr>
                    <th colspan="3">Producto</th>
                    <th scope="col">Precio</th>
                    <th scope="col">SubTotal</th>
                  </tr>
                </thead>
                <tfoot id="cart-footer">
                  <tr>
                    <th colspan="4"  class="text-end" id="totaltitle">TOTAL:</th>
                    <th >
                      <h5 id="total"></h5>
                    </th>
                  </tr>
                </tfoot>
                  <tbody>
                    <span id="cart-empty" class="text-danger">El carrito no tiene productos agregados</span>
                  </tbody>
                 
                </table>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-sm btn-danger" id="btn-delete-cart">Vaciar carrito</button>
            <button type="button" class="btn btn-sm btn-success" data-bs-dismiss="modal">Seguir comprando</button>
            <a href="/store" class="btn btn-sm btn-primary" id="btn-next-buy"> Finalizar compra</a>
          </div>
        </div>
      </div>
    </div>
  </aside>

  
  <script src="/js/cart.js"></script>